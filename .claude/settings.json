{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/auto-format.sh \"{{file_path}}\" \"{{tool_name}}\"",
            "description": "Auto-format code files after edits"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/update-component-docs.sh \"{{file_path}}\" \"{{tool_name}}\"",
            "description": "Update component documentation when code changes"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/suggest-adr.sh \"{{agent_name}}\" \"{{agent_output}}\"",
            "description": "Suggest ADR creation for architectural decisions"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/create-adr-draft.sh \"{{agent_name}}\" \"{{agent_output}}\"",
            "description": "Create ADR draft when decisions detected"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-start-context.sh",
            "description": "Load and summarize context at session start"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(.claude/hooks/*)",
      "Read(//c/local_dev/temp/**)",
      "Write(//c/local_dev/temp/**)",
      "Read(docs/**)",
      "Write(docs/**)",
      "Edit(docs/**)"
    ]
  }
}
